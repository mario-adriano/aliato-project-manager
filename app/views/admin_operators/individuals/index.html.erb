<div class="px-8 py-4 mx-auto">
  <%= render 'layouts/flash' %>

  <h1 class="mb-4 text-2xl font-bold">Lista de Pessoas Físicas</h1>

<div class="flex flex-wrap items-center justify-between w-full gap-2 mb-4">
  <div>
    <%= link_to 'Novo Cliente', new_admin_operators_individual_path, class: 'hidden md:block bg-customOrange hover:bg-orange-600 text-white font-bold py-2 px-4 rounded inline-block' %>
  </div>

  <div class="md:hidden fixed bottom-4 right-4">
    <%= link_to new_admin_operators_individual_path, class: 'w-14 h-14 bg-customOrange text-white rounded-full flex items-center justify-center shadow-lg' do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
    <% end %>
  </div>
  
  <div>
    <%= form_with(url: admin_operators_individuals_path(turbo_frame: "search_results"),
          method: "get",
          data: { "turbo-frame": "search_results",
                  controller: "search",
                  "search-target": "form" }) do |f| %>
        <%= f.search_field :query,
              placeholder: "Pesquisar",
              autocomplete: "off",
              data: { action: "input->search#search" } %>
    <% end %>
  </div>
</div>

  <turbo-frame id="search_results">
    <table class="min-w-full bg-white">
      <thead>
        <tr class="border-b border-gray-200">
          <th class="py-2 pr-4 text-left text-nowrap">Nome</th>
          <th class="py-2 pr-4 text-left text-nowrap">CPF</th>
          <th class="py-2 pr-4 text-left text-nowrap">Telefone</th>
          <th class="py-2 pr-4 text-left text-nowrap">Email</th>
          <th class="py-2 pr-4 text-left text-nowrap">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @individuals.each do |individual| %>
          <tr class="border-b border-gray-200">
            <td class="py-2 pr-4"><%= individual.name %></td>
            <td class="py-2 pr-4"><%= individual.cpf_formatted %></td>
            <td class="py-2 pr-4"><%= individual.phone %></td>
            <td class="py-2 pr-4"><%= individual.email %></td>
            <td class="flex flex-wrap gap-2 py-2 pr-4">
              <%= link_to 'Editar', edit_admin_operators_individual_path(individual), class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-2 rounded text-nowrap text-nowrap', data: { turbo: false } %>
              <button type="button" onclick="openModal(<%= individual.id %>)" class="px-2 py-1 font-bold text-white bg-red-500 rounded hover:bg-red-600">Excluir</button>
              <%= link_to 'Criar Projeto', new_admin_operators_project_path(client_id: individual.id), class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-2 rounded text-nowrap text-nowrap', data: { turbo: false } %>
              <% if individual.projects.present? %>
                <%= link_to 'Visualizar Projetos', admin_operators_projects_path(client_id: individual.id), class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-2 rounded text-nowrap text-nowrap', data: { turbo: false } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </turbo-frame>

  <!-- Modal -->
  <div id="deleteModal" class="fixed inset-0 flex items-center justify-center hidden bg-black bg-opacity-50">
    <div class="p-8 bg-white rounded-lg shadow-lg">
      <h2 class="mb-4 text-xl font-bold">Confirmação de Exclusão</h2>
      <p class="mb-4">Tem certeza de que deseja excluir este cliente?</p>
      <div class="flex justify-end space-x-4">
        <button type="button" onclick="closeModal()" class="px-4 py-2 font-bold text-white bg-gray-500 rounded hover:bg-gray-600">Cancelar</button>
        <%= button_to 'Confirmar', '', method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded', id: 'deleteButton' %>
      </div>
    </div>
  </div>
</div>

<script>
  function openModal(userId) {
    document.getElementById('deleteModal').classList.remove('hidden');
    document.getElementById('deleteButton').setAttribute('formaction', `/admin_operators/individuals/${userId}`);
  }

  function closeModal() {
    document.getElementById('deleteModal').classList.add('hidden');
  }
</script>
