<div class="px-8 py-4 mx-auto">
  <h1 class="text-2xl font-bold mb-4">Editar senha do operador</h1>
  
  <%= form_for @user, url: admin_operators_reset_password_path(@user), method: :patch do |f| %>
    <turbo-frame id="errors">
      <%= render 'layouts/errors', resource: @user %>
    </turbo-frame>

    <% if !current_user.is_reset_password %>
      <div class="mb-4">
        <%= f.label :current_password, 'Senha Atual', class: 'block text-gray-700 font-medium mb-2' %>
        <%= f.password_field :current_password, class: 'w-custom-752 max-w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, 'Senha', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.password_field :password, class: 'w-custom-752 max-w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, 'Confirmar senha', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.password_field :password_confirmation, class: 'w-custom-752 max-w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="flex items-center space-x-4">
      <%= f.submit 'Atualizar', class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
      <button type="reset" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Resetar</button>
    </div>
  <% end %>
</div>