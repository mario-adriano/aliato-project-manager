<div class="px-8 py-4 mx-auto">
  <h1 class="text-2xl font-bold mb-4">Editar Fase</h1>

  <%= form_for @phase, url: admin_phase_path(@phase), method: :patch do |f| %>
    <turbo-frame id="errors">
      <%= render 'layouts/errors', resource: @phase %>
    </turbo-frame>

    <div class="mb-4">
      <%= f.label :name, 'Nome da fase*', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :name, class: 'w-custom-752 max-w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :description, 'DescriÃ§Ã£o', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :description, class: 'w-custom-752 max-w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :color, "Escolha uma cor:" %>
      <%= f.color_field :color, class: "form-control", value: f.object.color || "#000000" %>
    </div>

    <div class="flex items-center space-x-4">
      <%= f.submit 'Atualizar', class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
      <button type="reset" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Resetar</button>
    </div>
  <% end %>
</div>