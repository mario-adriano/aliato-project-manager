<div class="container p-4 ml-10">
  <h1 class="text-2xl font-bold mb-4">Novo Cliente</h1>
  <%= form_for @individual, url: individuals_path do |f| %>
    <turbo-frame id="errors">
      <%= render 'layouts/errors', resource: @individual %>
    </turbo-frame>

    <div class="mb-4">
      <%= f.label :name, 'Nome completo*', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :name, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :document_number, 'CPF*', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :document_number, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :rg, 'RG', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :rg, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :email, 'E-mail', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :email, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :phone, 'Telefone', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :phone, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :zip_code, 'Cep', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :zip_code, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :address, 'EndereÃ§o', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :address, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :complement, 'Complemento', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :complement, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :neighborhood, 'Bairro', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :neighborhood, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :city, 'Cidade', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :city, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="mb-4">
      <%= f.label :state, 'Estado', class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.text_field :state, class: 'w-custom-752 px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:ring-0 focus:border-customOrange' %>
    </div>

    <div class="flex items-center space-x-4">
      <%= f.submit 'Cadastrar', class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
      <button type="reset" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Cancelar</button>
    </div>
  <% end %>
</div>
